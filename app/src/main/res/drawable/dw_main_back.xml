<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item android:top="1px" android:left="1px" android:right="1px">
                <shape android:shape="rectangle">
                    <solid android:color="#08000000"/>
                    <corners android:topLeftRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp"/>
                </shape>
            </item>

            <item android:top="2px" android:left="2px" android:right="2px">
                <shape android:shape="rectangle">
                    <solid android:color="#0D000000"/>
                    <corners android:topLeftRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp"/>
                </shape>
            </item>

            <item android:top="4px" android:left="4px" android:right="4px">
                <shape android:shape="rectangle">
                    <solid android:color="#1A000000"/>
                    <corners android:topLeftRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp"/>
                </shape>
            </item>

            <item android:top="6px" android:left="6px" android:right="6px">
                <shape android:shape="rectangle">
                    <solid android:color="#26000000"/>
                    <corners android:topLeftRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp"/>
                </shape>
            </item>

            <item android:top="7px" android:left="7px" android:right="7px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/mlWhite"/>
                    <corners android:topLeftRadius="@dimen/_20sdp" android:topRightRadius="@dimen/_20sdp"/>

                </shape>
            </item>

        </layer-list>

    </item>

</selector>