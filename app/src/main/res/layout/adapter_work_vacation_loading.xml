<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="ir.ngra.automation.models.MD_WorkVacation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/dw_back_recycler_loading">


        <ir.mlcode.latifiarchitecturelibrary.customs.ML_EditText
            android:id="@+id/ML_EditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_100sdp"
            app:normalBack="@drawable/dw_back_recycler_loading_items"
            app:delimiterBack="@color/ML_Line"
            app:delimiterWidth="1px"
            app:delimiter_marginLeft="@dimen/_5sdp"
            app:delimiter_marginRight="@dimen/_5sdp"
            app:image_height="@dimen/_10sdp"
            app:image_src="@drawable/ic_camping"
            app:image_tint="@color/ML_Line"
            app:image_width="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ir.mlcode.latifiarchitecturelibrary.customs.ML_EditText
            android:id="@+id/ml_EditTextSubstitute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_150sdp"
            app:normalBack="@drawable/dw_back_recycler_loading_items"
            app:delimiterBack="@color/ML_Line"
            app:delimiterWidth="1px"
            app:delimiter_marginLeft="@dimen/_5sdp"
            app:delimiter_marginRight="@dimen/_5sdp"
            app:image_height="@dimen/_10sdp"
            app:image_src="@drawable/ic_player_substitution"
            app:image_tint="@color/ML_Line"
            app:image_width="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ML_EditText2" />

        <ir.mlcode.latifiarchitecturelibrary.customs.ML_EditText
            android:id="@+id/ML_EditText3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_50sdp"
            app:normalBack="@drawable/dw_back_recycler_loading_items"
            app:delimiterBack="@color/ML_Line"
            app:delimiterWidth="1px"
            app:delimiter_marginLeft="@dimen/_5sdp"
            app:delimiter_marginRight="@dimen/_5sdp"
            app:image_height="@dimen/_10sdp"
            app:image_src="@drawable/ic_calendar_start"
            app:image_tint="@color/ML_Line"
            app:image_width="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ml_EditTextSubstitute" />


        <ir.mlcode.latifiarchitecturelibrary.customs.ML_EditText
            android:id="@+id/ML_EditText4"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            app:delimiterBack="@color/ML_Line"
            app:delimiterWidth="1px"
            app:delimiter_marginLeft="@dimen/_5sdp"
            app:delimiter_marginRight="@dimen/_5sdp"
            app:image_height="@dimen/_10sdp"
            app:image_src="@drawable/ic_calendar_end"
            app:image_tint="@color/ML_Line"
            app:image_width="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ML_EditText3"
            app:normalBack="@drawable/dw_back_recycler_loading_items" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
