<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="item"
            type="ir.ngra.automation.models.MD_WorkVacation" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_2sdp"
        android:padding="@dimen/_5sdp"
        android:background="@drawable/dw_edit_normal">

        <ir.mlcode.latifiarchitecturelibrary.customs.ML_EditText
            android:id="@+id/ML_EditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            app:delimiterBack="@drawable/dw_delimiter"
            app:delimiterWidth="@dimen/_1sdp"
            app:delimiter_marginLeft="@dimen/_5sdp"
            app:delimiter_marginRight="@dimen/_5sdp"
            app:editHint="@string/chooseWorkVacationType"
            app:editSplitter="false"
            app:editTextColor="@color/ML_EditText"
            app:editable="false"
            app:image_height="@dimen/_15sdp"
            app:image_src="@drawable/ic_camping"
            app:image_tint="@color/colorAccent"
            app:image_width="@dimen/_15sdp"
            app:inputTypeEdit="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:textGravity="right"
            app:textMaxLine="1"
            app:textSize="@dimen/_10sdp"
            app:validationType="text" />


        <ir.mlcode.latifiarchitecturelibrary.customs.ML_EditText
            android:id="@+id/ml_EditTextSubstitute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:padding="@dimen/_5sdp"
            app:delimiterBack="@drawable/dw_delimiter"
            app:delimiterWidth="@dimen/_1sdp"
            app:delimiter_marginLeft="@dimen/_5sdp"
            app:delimiter_marginRight="@dimen/_5sdp"
            app:editHint="@string/chooseSubstitute"
            app:editSplitter="false"
            app:editTextColor="@color/ML_EditText"
            app:editable="false"
            app:image_height="@dimen/_15sdp"
            app:image_src="@drawable/ic_player_substitution"
            app:image_tint="@color/colorAccent"
            app:image_width="@dimen/_15sdp"
            app:inputTypeEdit="text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ML_EditText2"
            app:textMaxLine="1"
            app:textSize="@dimen/_11sdp"
            app:validationType="text"
            app:textGravity="right"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>
